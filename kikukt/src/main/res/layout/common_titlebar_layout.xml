<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_commonTitleBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_commonTitleBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/iv_commonTitleBar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_14"
            android:scaleType="center"
            android:src="@drawable/ic_kiku_arrowleft" />

        <TextView
            android:id="@+id/tv_commonTitleBar_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            tools:text="标题" />

        <ImageView
            android:id="@+id/iv_commonTitleBar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_16"
            android:scaleType="center"
            android:visibility="gone"
            tools:src="@android:drawable/ic_menu_rotate" />

        <TextView
            android:id="@+id/tv_commonTitleBar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_16"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            tools:text="标题" />
    </RelativeLayout>

    <View
        android:id="@+id/view_commonTitleBarDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/c_DCDCDC"
        android:visibility="gone" />

</LinearLayout>