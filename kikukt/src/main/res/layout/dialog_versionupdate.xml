<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/rectangle_whitebg_greyline_corner8"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/dp_14"
        android:paddingTop="@dimen/dp_14"
        android:text="@string/versionupdate_title"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/sp_16"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/c_EEEEEE"/>

    <TextView
        android:id="@+id/tv_versionUpdateContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:paddingTop="@dimen/dp_16"
        android:textColor="@color/c_666666"
        android:textSize="@dimen/sp_12"
        tools:text="-优化了\n-解决了bug"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_versionUpdateCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/rectangle_greyline_whitebg_corner4"
            android:paddingBottom="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_6"
            android:text="@string/versionupdate_cancel"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_13"/>

        <TextView
            android:id="@+id/tv_versionUpdateSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_goldbg_greyline_corner4"
            android:paddingBottom="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_6"
            android:text="@string/versionupdate_submit"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_13"/>
    </LinearLayout>

</LinearLayout>