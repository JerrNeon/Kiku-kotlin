<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_whitebg_corner20"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_14">

    <LinearLayout
        android:id="@+id/ll_protocolTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_protocolTitle"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_protocolContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:lineSpacingExtra="@dimen/dp_2"
        android:maxLines="11"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_protocolTitle"
        tools:text="@string/dialog_protocolContent1" />

    <TextView
        android:id="@+id/tv_protocolNegative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@drawable/round_1stroke_8r"
        android:paddingStart="@dimen/dp_22"
        android:paddingTop="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_22"
        android:paddingBottom="@dimen/dp_6"
        android:text="@string/dialog_protocolNegative"
        android:textColor="@color/c_666666"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_protocolPositive"
        app:layout_constraintTop_toBottomOf="@id/tv_protocolContent" />

    <TextView
        android:id="@+id/tv_protocolPositive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/round_a28566_10r"
        android:paddingStart="@dimen/dp_14"
        android:paddingTop="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_6"
        android:text="@string/dialog_protocolPositive"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tv_protocolNegative"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_protocolContent" />
</androidx.constraintlayout.widget.ConstraintLayout>