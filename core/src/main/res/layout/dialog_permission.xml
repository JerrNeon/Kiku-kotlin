<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FFFFFF"
    android:padding="@dimen/dp_14"
    tools:viewBindingIgnore="true">

    <TextView
        android:id="@+id/tv_permissionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/permission_title"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_permissionMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/permission_content"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/tv_permissionTitle" />

    <TextView
        android:id="@+id/tv_permissionCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_14"
        android:text="@string/permission_negative"
        android:textColor="@color/c_009788"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toStartOf="@id/tv_permissionSubmit"
        app:layout_constraintTop_toBottomOf="@id/tv_permissionMessage" />

    <TextView
        android:id="@+id/tv_permissionSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_14"
        android:text="@string/permission_positive"
        android:textColor="@color/c_009788"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_permissionMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>